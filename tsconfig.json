{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "declaration": true
    },
    "include": ["src/*"],
    "exclude": ["node_modules", "dist"]
}
